{
    "get_device": {
        "command": "get-device",
        "request": {
            "topic": "uhppoted/gateway/requests/device:get",
            "fields": [
                {
                    "field": "device-id",
                    "value": "<controller-id>",
                    "description": "(required) controller serial number"
                }
            ]
        },
        "response": {
            "fields": [
                {
                    "field": "device-id",
                    "value": "<controller-id>",
                    "description": "controller serial number"
                },
                {
                    "field": "device-type",
                    "value": "<controller-type>",
                    "description": "controller type (UTO311-L0x)"
                },
                {
                    "field": "ip-address",
                    "value": "<address>",
                    "description": "controller IPv4 address"
                },
                {
                    "field": "port",
                    "value": "<UDPv4 port>",
                    "description": "UDP port for controller commands"
                }
            ]
        }
    }
}