{
    "record_special_events": {
        "command": "record-special-events",
        "request": {
            "topic":  "uhppoted/gateway/requests/device/special-events:set",
            "fields": [
                {
                    "field": "device-id",
                    "value": "<controller-id>",
                    "description": "(required) controller serial number"
                },
                {
                    "field": "enabled",
                    "value": "<bool>",
                    "description": "(required) true/false"
                }
            ]
        },
        "response": {
            "fields": [
                {
                    "field": "device-id",
                    "value": "<controller-id>",
                    "description": "controller serial number"
                },
                {
                    "field": "door",
                    "value": "<door-id>",
                    "description": "door (1..4) from the request"
                },
                {
                    "field": "control",
                    "value": "<mode>",
                    "description": "door control mode (normally open, normally closed or controlled)"
                }
            ]
        }
    }
}