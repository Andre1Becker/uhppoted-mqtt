{
    "put_card": {
        "command": "put-card",
        "request": {
            "topic": "uhppoted/gateway/requests/device/card:put",
            "fields": [
                {
                    "field": "device-id",
                    "value": "uint32",
                    "description": "(required) controller serial number"
                },
                {
                    "field": "card",
                    "value": "record",
                    "description": "card record"
                },
                {
                    "field": "card-number",
                    "value": "uint32",
                    "description": "card number"
                },
                {
                    "field": "start-date",
                    "value": "date",
                    "description": "card 'valid from' date (inclusive)"
                },
                {
                    "field": "end-date",
                    "value": "date",
                    "description": "card 'valid until' date (inclusive)"
                },
                {
                    "field": "doors",
                    "value": "{1:uint8, 2:uint8, 3:uint8, 4:uint8}",
                    "description": "door [1..4] access rights"
                }
            ]
        },
        "response": {
            "fields": [
                {
                    "field": "device-id",
                    "value": "<controller-id>",
                    "description": "controller serial number"
                },
                {
                    "field": "card",
                    "value": "record",
                    "description": "card record"
                },
                {
                    "field": "card-number",
                    "value": "uint32",
                    "description": "card number"
                },
                {
                    "field": "start-date",
                    "value": "date",
                    "description": "card 'valid from' date (inclusive)"
                },
                {
                    "field": "end-date",
                    "value": "date",
                    "description": "card 'valid until' date (inclusive)"
                },
                {
                    "field": "doors",
                    "value": "{1:uint8, 2:uint8, 3:uint8, 4:uint8}",
                    "description": "door [1..4] access rights"
                }
            ]
        }
    }
}