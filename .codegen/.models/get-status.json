                {
                    "field": "door-buttons",
                    "value": "{ 1:bool, 2:bool, 3:bool, 4:bool }",
                    "description": "door button states"
                },
                {
                    "field": "input-state",
                    "value": "uint8",
                    "description": "input state bitset"
                },
                {
                    "field": "relay-state",
                    "value": "uint8",
                    "description": "relay state bitset"
                },
                {
                    "field": "system-error",
