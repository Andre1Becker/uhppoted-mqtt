{
  "acl_grant": {
    "command": "acl-grant",
    "request": {
      "topic": "uhppoted/gateway/requests/acl/card:grant",
      "fields": [
        {
          "field": "card-number",
          "value": "uint32",
          "description": "card number"
        },
        {
          "field": "start-date",
          "value": "date",
          "description": "card 'valid from' date (inclusive)"
        },
        {
          "field": "end-date",
          "value": "date",
          "description": "card 'valid until' date (inclusive)"
        },
        {
          "field": "doors",
          "value": "array of string",
          "description": "string list of door names"
        }
      ]
    },
    "response": {
      "fields": [
        {
          "field": "device-id",
          "value": "<controller-id>",
          "description": "controller serial number"
        },
        {
          "field": "granted",
          "value": "bool",
          "description": "grant success/fail"
        }
      ]
    }
  }
}
