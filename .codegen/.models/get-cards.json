{
  "get_cards": {
    "command": "get-cards",
    "request": {
      "topic": "device/cards:get",
      "fields": [
        {
          "field": "device-id",
          "value": "<controller-id>",
          "description": "(required) controller serial number"
        }
      ]
    },
    "response": {
      "fields": [
        {
          "field": "device-id",
          "value": "<controller-id>",
          "description": "controller serial number"
        },
        {
          "field": "cards",
          "value": "[]uint32",
          "description": "list of card numbers"
        }
      ]
    }
  }
}
